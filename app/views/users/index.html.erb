<% @users.each do |u| %>
  <ul>
    <li><%= link_to_if(can?(:read, User), "#{u.email}", user_path(u.id)) {} %>
    <!--
    <td><%= "#{u.email}" %></td>
    -->
    <%= "#{u.roles.collect{|r| r.name}}" %>
    <%= link_to_if(can?(:edit, User), image_tag("edit_icon.png"), edit_user_path(u.id)) {} %>
    <!--td><%= image_tag("edit_icon.png") %></td-->
    <%= link_to_if(can?(:delete, u), image_tag("delete_icon.png"), u, :confirm => "Are you sure?", :method => :delete) {} %>
    
  </ul>
<% end %>